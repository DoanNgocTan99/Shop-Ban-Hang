

@model PagedList.IPagedList<Model.EF.ProductCategory>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section Title{
    Admin - Doanh mục sản phẩm
}
@section header{
    Quản Lý Doanh Mục Sản Phẩm
}
@*@section jsFooter{
    <script src="~/assets/admin/js/controller/userController.js"></script>
}*@
<div class="row">
    <div class="container-fluid">

        <!-- Page Heading -->
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
            <div class="card-body">
                @using (Html.BeginForm("Index", "ProductCategory", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-md-4 form-group">
                            <input type="text" value="@ViewBag.SearchString" class="form-control bg-light border-0 small" placeholder="Search for..." name="searchString" />
                        </div>
                        <div class="col-md-4 form-group">
                            <button class="btn btn-success" type="submit">
                                Tìm kiếm
                            </button>
                            <a href="Create" class="btn btn-primary">
                                Thêm mới
                            </a>
                        </div>
                    </div>
                }
                <div>
                    <p>


                    </p>
                </div>
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Tên Doanh mục</th>
                                <th>Ten-Doanh-Mục</th>
                                <th>Loại hiển thị</th>
                                <th>Người tạo</th>
                                <th>Trạng thái</th>
                                <th>Hiển thị trang home</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.ID">
                                    <td>@item.Name</td>
                                    <td>@item.MetaTitle</td>
                                    <td>@item.DisplayOrder</td>
                                    <td>@item.CreatrBy</td>
                                    <td>@item.Status</td>
                                    <td>@item.ShowOnHome</td>
                                    <td>
                                        <a href="/Admin/ProductCategory/Edit/@item.ID">Sửa</a>
                                        |
                                        @Ajax.ActionLink("Xoá", "Delete", new { @Id = item.ID }, new AjaxOptions
                                  {
                                      Confirm = "Bạn có muốn xoá bản ghi này?",
                                      OnComplete = "$('#row_" + @item.ID + "').remove()",
                                      HttpMethod = "Delete"
                                  })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                </div>
            </div>
        </div>

    </div>
</div>